    {
      "role": "counselor",
      "time": "2021-03-26T12:11:28",
      "utterance": "ええ"
    },
    {
      "role": "client",
      "time": "2021-03-26T12:11:56",
      "utterance": "友達の家で何かを壊してしまったり"
    },
    {
      "role": "counselor",
      "time": "2021-03-26T12:12:06",
      "utterance": "はい"
    },
    {
      "role": "client",
      "time": "2021-03-26T12:12:27",
      "utterance": "待っててね、と言っても直ぐに何処かに行きます"
