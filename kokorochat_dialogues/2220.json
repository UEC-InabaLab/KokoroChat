    {
      "role": "client",
      "time": "2021-07-19T16:38:30",
      "utterance": "はい"
    },
    {
      "role": "client",
      "time": "2021-07-19T16:38:38",
      "utterance": "ありがとうございました"
    },
    {
      "role": "counselor",
      "time": "2021-07-19T16:40:47",
      "utterance": "あなたはお母さま思いの優しい思いやりのある方だと感じました。"
    },
    {
      "role": "counselor",
      "time": "2021-07-19T16:41:50",
