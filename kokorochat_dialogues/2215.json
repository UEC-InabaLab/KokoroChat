    {
      "role": "client",
      "time": "2021-07-17T21:16:44",
      "utterance": "はい"
    },
    {
      "role": "counselor",
      "time": "2021-07-17T21:17:48",
      "utterance": "ちなみに、今はご家族とお住まいでしょうか？"
    },
    {
      "role": "client",
      "time": "2021-07-17T21:18:23",
      "utterance": "一人暮らしです"
    },
    {
      "role": "counselor",
      "time": "2021-07-17T21:19:26",
      "utterance": "そうだったんですねなおさら、寂しいお気持ちになってしまいますね"
    },
    {
      "role": "client",
      "time": "2021-07-17T21:19:44",
      "utterance": "はい夜になると思いだして寂しすぎて過呼吸のようになることがあります"
