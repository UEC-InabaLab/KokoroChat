    {
      "role": "client",
      "time": "2021-07-17T21:34:08",
      "utterance": "はい…"
    },
    {
      "role": "client",
      "time": "2021-07-17T21:34:26",
      "utterance": "つらすぎる…"
    },
    {
      "role": "counselor",
      "time": "2021-07-17T21:34:42",
