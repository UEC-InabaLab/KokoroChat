    {
      "role": "client",
      "time": "2021-07-17T21:28:27",
      "utterance": "父に会いたいのにいない会えない話せないつらい苦しいです"
    },
    {
      "role": "client",
      "time": "2021-07-17T21:28:41",
      "utterance": "お願いします"
    },
    {
      "role": "counselor",
      "time": "2021-07-17T21:29:37",
