    {
      "role": "client",
      "time": "2021-07-17T21:37:07",
      "utterance": "現実と向き合えないです"
    },
    {
      "role": "client",
      "time": "2021-07-17T21:37:27",
      "utterance": "ダメですか"
    },
    {
      "role": "counselor",
      "time": "2021-07-17T21:38:17",
