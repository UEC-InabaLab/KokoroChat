    {
      "role": "counselor",
      "time": "2021-06-24T10:31:14",
      "utterance": "行き違ってすみません。"
    },
    {
      "role": "client",
      "time": "2021-06-24T10:31:29",
      "utterance": "いえ、ちょうど話そうとしていたこと"
    },
    {
      "role": "client",
      "time": "2021-06-24T10:32:03",
